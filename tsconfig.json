{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2019",
    "strict": true,
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
